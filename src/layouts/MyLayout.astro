---
import starry_sky from "../assets/sky.jpg";
import Header from "../components/Header.astro";

const backgroundUrl = starry_sky.src;
// jeremy-bishop-G9i_plbfDgk-unsplash
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      :root {
        --glow: #f8aa62;
        --charcoal: #181316;
        --rose: #e98a7b;
        --myWhite: #ffebd2;
      }
      body {
        margin: auto;
        padding-left: 20px;
        padding-right: 20px;
        max-width: 920px;
        font-family: Verdana;
        color: var(--myWhite);
        background-color: var(--charcoal);
        background-size: cover;
      }

      header {
        display: flex;
        align-items: center;
        justify-content: end;
        margin: 30px 30px 30px 30px;
      }

      a:link {
        color: var(--glow);
      }
      a:visited {
        color: var(--rose);
      }
    </style>
  </head>
