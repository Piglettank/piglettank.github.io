---
import { Image } from "astro:assets";
import starry_sky from "../assets/sky.jpg";
import Header from "../components/Header.astro";
import background from "../assets/background.png";
import name from "../assets/namestamp.png";
import me from "../assets/pig_2.png";

// jeremy-bishop-G9i_plbfDgk-unsplash
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Shantell Sans"
    />
    <style>
      :root {
        --glow: #f8aa62;
        --charcoal: #181316;
        --rose: #e98a7b;
        --gentleOutline: #e98a7b66;
        --myWhite: #ffebd2;
        --hoverOverlay: rgba(255, 255, 255, 0.054);
      }

      :global(h1),
      :global(h2),
      :global(h3),
      :global(h4),
      :global(h5),
      :global(h6) {
        font-family: "Shantell Sans", cursive, sans-serif;
      }

      :global(h1) {
        font-size: 36px;
      }
      :global(h2) {
        font-size: 26px;
      }
      :global(h3) {
        font-size: 22px;
      }
      :global(h4) {
        font-size: 18px;
      }
      :global(h5) {
        font-size: 14px;
      }
      :global(h6) {
        font-size: 12px;
      }

      :global(p) {
        line-height: 150%;
        font-family: "Shantell Sans", cursive, sans-serif;
      }

      :global(ul) {
        padding-left: 16px;
      }
      :global(li) {
        margin: 0;
        padding-bottom: 8px;
        line-height: 150%;
        font-family: "Shantell Sans", cursive, sans-serif;
      }

      body {
        background-color: var(--charcoal);
        color: var(--myWhite);
      }

      .child {
        margin: auto;
        padding-left: 20px;
        padding-right: 20px;
        max-width: 920px;
        background-size: cover;
      }

      .top {
        display: flex;
        height: 100svh;
        align-items: center;
        align-self: center;
        justify-content: center;
        background-size: auto;
        background-repeat: no-repeat;
        /* background-color: #e98a7b; */
        gap: 40px;
        width: 100%;
      }

      .backgroundImage {
        position: absolute;
        height: 100%;
        width: 100%;
      }

      .namestamp {
        position: absolute;
        right: 10%;
        height: 100%;
        width: auto;
      }

      .me {
        position: absolute;
        left: 20%;
        height: auto;
        width: 30%;
      }

      header {
        display: flex;
        align-items: center;
        justify-content: end;
        margin: 30px 30px 30px 30px;
      }

      a:link {
        color: var(--glow);
      }
      a:visited {
        color: var(--rose);
      }
    </style>
  </head>
