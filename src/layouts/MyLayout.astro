---
import piglettank from "../assets/piglettank.png";
import starry_sky from "../assets/starry_sky.png";
import { Image } from "astro:assets";
import { BackgroundImage } from "astro-imagetools/components";
import Header from "../components/Header.astro";
---

<html lang="en">
  <head>
    <style>
      :root {
        --glow: #e98a7b;
        --charcoal: #181316;
        --rose: #9b6a6c;
        --myWhite: #ffebd2;
      }
      body {
        margin: auto;
        padding-left: 20px;
        padding-right: 20px;
        max-width: 1080px;
        font-family: Verdana;
        color: var(--myWhite);
        background-color: var(--charcoal);
      }

      header {
        display: flex;
        align-items: center;
        justify-content: end;
        margin: 30px 30px 30px 30px;
      }
    </style>
  </head>
  <body>
    <BackgroundImage src={starry_sky} alt="Starry sky background" />
    <header>
      <Header title="HOME" link="/" />
      <Header title="PROJECTS" link="/projects/" />
      <Header title="EXPERIMENT" link="/experiment/" />
    </header>
    <slot />
  </body>
</html>
