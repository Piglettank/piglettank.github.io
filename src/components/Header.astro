---
interface Props {
  title: string;
  link: string;
}

const { title, link } = Astro.props;
---

<html>
  <head>
    <style>
      a {
        color: var(--myWhite);
        padding: 8px 16px;
        text-decoration: none;
        letter-spacing: 2px;
        font-size: 14px;
        font-family: "Shantell Sans", cursive, sans-serif;
        box-sizing: border-box;
        transition: color 0.3s ease;
      }

      a:hover {
        color: var(--glow);
        border-bottom: solid var(--glow);
        border-width: 1px;
      }
    </style>
  </head>

  <a href={link}>{title}</a>


</html>
