---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  gif: ImageMetadata;
  imageAlt: string;
  gifAlt: string;
  title: string;
  description: string;
  link: string;
  tags?: string[];
}

const { image, gif, title, description, link, tags = [] } = Astro.props;
---

<style>
  p {
    line-height: 150%;
    font-family: "Verdana", Arial, sans-serif;
  }

  h3 {
    font-family: "Shantell Sans", cursive, sans-serif;
  }
  .card {
    border-radius: 16px;
    /* border: solid var(--glow); */
    /* border-width: 1px; */
    color: var(--myWhite);
    padding: 12px;
    display: flex;
    text-decoration: none;
    align-items: center;
    cursor: pointer;
  }
  .card:hover {
    background-color: rgba(255, 255, 255, 0.04);
    /* border: solid var(--glow); */
  }
  .card:hover .cardPreviewImage {
    opacity: 0;
  }
  .cardPreview {
    height: 100px;
    width: 100px;
    border-radius: 8px;
    padding: 0px;
    position: relative;
    flex-shrink: 0;
  }
  .cardPreviewImage {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    transition: opacity 0.3s ease;
    position: absolute;
    z-index: 2;
  }
  .cardPreviewGif {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    position: absolute;
    z-index: 1;
  }

  .text-wrapper {
    position: relative;
    width: 100%;
  }

  .tag {
    border-radius: 12px;
    margin-top: 8px;
    margin-right: 8px;
    font-size: 11px;
    font-family: "Verdana", Arial, sans-serif;
    padding: 6px 10px;
    background-color: rgba(255, 198, 198, 0.12);
  }

  .tag-wrapper {
    display: flex;
  }
</style>

<a class="card" href={link} target="_blank">
  <div class="cardPreview">
    <Image src={image} alt="frilans finans logo" class="cardPreviewImage" />
    <Image src={gif} alt="frilans finans logo" class="cardPreviewGif" />
  </div>
  <div style="width: 16px;"></div>
  <div class="text-wrapper">
    <h3 style="margin: 0;">{title}</h3>
    <p style="margin-top: 2px; margin-bottom: 0;">
      {description}
    </p>
    <div class="tag-wrapper">
      {tags.map((tag) => <div class="tag">{tag}</div>)}
    </div>
  </div>
</a>
