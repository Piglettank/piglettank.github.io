---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  imageAlt: string;
  hoverImage: ImageMetadata;
  hoverImageAlt: string;
  title: string;
  description: string;
  link: string;
  tags?: string[];
}

const {
  image,
  imageAlt,
  hoverImage: hoverImage,
  hoverImageAlt: hoverImageAlt,
  title,
  description,
  link,
  tags = [],
} = Astro.props;
---

<style>
  p {
    line-height: 150%;
    font-family: "Shantell Sans", cursive, sans-serif;
  }

  h3 {
    font-family: "Shantell Sans", cursive, sans-serif;
  }
  .card {
    border-radius: 16px;
    color: var(--myWhite);
    padding: 12px;
    display: flex;
    text-decoration: none;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .card:hover {
    background-color: var(--hoverOverlay);
  }
  .card:hover .image {
    opacity: 0;
  }
  .image-wrapper {
    height: 100px;
    width: 100px;
    padding: 0px;
    position: relative;
    flex-shrink: 0;
    mask: url(#brush-mask);
    -webkit-mask: url(#brush-mask);
  }
  .image {
    width: 100%;
    height: 100%;
    transition: opacity 0.3s ease;
    position: absolute;
    z-index: 2;
  }
  .hover-image {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 1;
  }

  .text-wrapper {
    position: relative;
    width: 100%;
  }

  .tag {
    border-radius: 12px;
    margin-top: 8px;
    margin-right: 8px;
    font-size: 11px;
    font-family: "Verdana", Arial, sans-serif;
    padding: 6px 10px;
    background-color: rgba(255, 198, 198, 0.12);
  }

  .tag-wrapper {
    display: flex;
  }
  @media screen and (max-width: 600px) {
    .image-wrapper {
      width: 80px;
      height: 80px;
    }
  }
</style>

<svg style="position: absolute; width: 0; height: 0;">
  <defs>
    <filter id="brush-edge">
      <feTurbulence
        type="fractalNoise"
        baseFrequency="0.08"
        numOctaves="4"
        result="noise"
        seed="5"></feTurbulence>
      <feDisplacementMap
        in="SourceGraphic"
        in2="noise"
        scale="4"
        xChannelSelector="R"
        yChannelSelector="G"
        result="displaced"></feDisplacementMap>
      <feGaussianBlur in="displaced" stdDeviation="1"></feGaussianBlur>
    </filter>

    <mask id="brush-mask">
      <rect
        x="0"
        y="0"
        width="100"
        height="100"
        rx="8"
        ry="8"
        fill="white"
        filter="url(#brush-edge)"></rect>
    </mask>
  </defs>
</svg>

<a class="card" href={link} target="_blank">
  <div class="image-wrapper">
    <Image src={image} alt={imageAlt} class="image" />
    <Image src={hoverImage} alt={hoverImageAlt} class="hover-image" />
  </div>
  <div style="width: 16px;"></div>
  <div class="text-wrapper">
    <h3 style="margin: 0;">{title}</h3>
    <p style="margin-top: 2px; margin-bottom: 0;">
      {description}
    </p>
    <div class="tag-wrapper">
      {tags.map((tag) => <div class="tag">{tag}</div>)}
    </div>
  </div>
</a>
