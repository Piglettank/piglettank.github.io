---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  imageAlt: string;
  hoverImage: ImageMetadata;
  hoverImageAlt: string;
  title: string;
  description: string;
  link: string;
  tags?: string[];
}

const {
  image,
  imageAlt,
  hoverImage: hoverImage,
  hoverImageAlt: hoverImageAlt,
  title,
  description,
  link,
  tags = [],
} = Astro.props;
---

<style>
  p {
    line-height: 150%;
    font-family: "Shantell Sans", cursive, sans-serif;
  }

  h3 {
    font-family: "Shantell Sans", cursive, sans-serif;
  }
  .card {
    border-radius: 16px;
    color: var(--myWhite);
    padding: 12px;
    display: flex;
    text-decoration: none;
    align-items: center;
    cursor: pointer;
  }
  .card:hover {
    background-color: var(--hoverOverlay);
  }
  .card:hover .image {
    opacity: 0;
  }
  .image-wrapper {
    height: 100px;
    width: 100px;
    border-radius: 8px;
    padding: 0px;
    position: relative;
    flex-shrink: 0;
  }
  .image {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    transition: opacity 0.3s ease;
    position: absolute;
    z-index: 2;
  }
  .hover-image {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    position: absolute;
    z-index: 1;
  }

  .text-wrapper {
    position: relative;
    width: 100%;
  }

  .tag {
    border-radius: 12px;
    margin-top: 8px;
    margin-right: 8px;
    font-size: 11px;
    font-family: "Verdana", Arial, sans-serif;
    padding: 6px 10px;
    background-color: rgba(255, 198, 198, 0.12);
  }

  .tag-wrapper {
    display: flex;
  }
</style>

<a class="card" href={link} target="_blank">
  <div class="image-wrapper">
    <Image src={image} alt={imageAlt} class="image" />
    <Image src={hoverImage} alt={hoverImageAlt} class="hover-image" />
  </div>
  <div style="width: 16px;"></div>
  <div class="text-wrapper">
    <h3 style="margin: 0;">{title}</h3>
    <p style="margin-top: 2px; margin-bottom: 0;">
      {description}
    </p>
    <div class="tag-wrapper">
      {tags.map((tag) => <div class="tag">{tag}</div>)}
    </div>
  </div>
</a>
