---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  gif: ImageMetadata;
  imageAlt: string;
  gifAlt: string;
  title: string;
  description: string;
  link: string;
}

const { image, gif, title, description, link } = Astro.props;
---

<html>
  <head>
    <style>
      .card {
        height: 100px;
        border-radius: 16px;
        border: solid var(--glow);
        border-width: 1px;
        color: var(--myWhite);
        padding: 12px;
        display: flex;
        text-decoration: none;
        align-items: center;
        cursor: pointer;
      }
      .card:hover {
        height: 100px;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.04);
        border: solid var(--glow);
        border-width: 3px;
      }
      .card:hover .cardPreviewImage {
        opacity: 0;
      }
      .cardPreview {
        height: 100%;
        width: 100px;
        position: relative;
      }
      .cardPreviewImage {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        transition: opacity 0.3s ease;
        position: absolute;
        z-index: 2;
      }
      .cardPreviewGif {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        position: absolute;
        z-index: 1;
      }
    </style>
  </head>

  <a class="card" href={link} target="_blank">
    <div class="cardPreview">
      <Image src={image} alt="frilans finans logo" class="cardPreviewImage" />
      <Image src={gif} alt="frilans finans logo" class="cardPreviewGif" />
    </div>
    <div style="width: 16px;"></div>
    <div>
      <h3 style="margin: 0;">{title}</h3>
      <p style="margin-top: 8px; margin-bottom: 0;">
        {description}
      </p>
    </div>
  </a>


</html>
