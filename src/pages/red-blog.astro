---
import { glob } from "astro/loaders"
import Layout from "../layouts/MyLayout.astro"

const posts = await Astro.glob('../pages/posts/*.md');
---

<Layout>    
    <h1>Red blog</h1>
    <p>This will be my political journal as I explore if I agree with socialism</p>
    <ul>
        {
            posts.map((post) =>  (
                <li><a href={post.url}>{post.frontmatter.title}</a></li>
            ))
        }
    </ul>
</Layout>
