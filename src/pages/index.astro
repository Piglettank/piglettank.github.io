---
import Layout from "../layouts/MyLayout.astro";
import pig from "../assets/pig.png";
import { Image } from "astro:assets";
import Games from "../components/Games.astro";
---

<Layout>
  <style>
    .container {
      display: flex;
      height: 70vh;
      align-items: center;
      align-self: center;
      justify-content: center;
      gap: 40px;
      width: 100%;
    }

    .text {
      flex: 1;
      max-width: 540px;
      color: var(--myWhite);
    }
    .image {
      width: 400px;
      height: 400px;
      border-radius: 100%;
      object-fit: cover;
    }

    @media screen and (max-width: 760px) {
      .image {
        height: 240px;
        width: 240px;
      }
      h1 {
        font-size: 26px;
      }
      .container {
        display: flex;
        height: 70vh;
        align-items: flex-start;
        flex-direction: column;
        align-items: center;
        text-align: center;
        align-content: center;
        gap: 40px;
        width: 100%;
      }
    }
  </style>

  <div class="container">
    <Image src={pig} alt="Me about to smash" class="image" />
    <div class="text">
      <h1>&nbsp;</h1>
      <p>Welcome to the swine domain. Enjoy my collection of crap</p>
      <Games />
    </div>
  </div>
</Layout>

