---
import Layout from "../layouts/MyLayout.astro";
import pig from "../assets/pig.png";
import { Image } from "astro:assets";
import Games from "../components/GamesHeader.astro";
import Card from "../components/GameCard.astro";
import ff_logo from "../assets/ff_logo.png";
import ff_game_gif from "../assets/ff_game_gif.gif";
import flubbermonkeys_logo from "../assets/flubbermonkeys_logo.png";
import flubbermonkeys_gif from "../assets/flubbermonkeys_gif.gif";
import github_white from "../assets/github_white.png";
import linkedin_white from "../assets/linkedin_white.png";
import SocialMediaLink from "../components/SocialMediaLink.astro";
---

<Layout>
  <style>
    .landing-page {
      display: flex;
      height: 100svh;
      align-items: center;
      align-self: center;
      justify-content: center;
      gap: 40px;
      width: 100%;
    }

    .text {
      flex: 1;
      max-width: 540px;
      color: var(--myWhite);
    }
    .image {
      width: 400px;
      height: 400px;
      border-radius: 100%;
      object-fit: cover;
    }

    .social-media-links {
      display: flex;
      gap: 16px;
    }

    @media screen and (max-width: 760px) {
      .image {
        height: 40%;
        width: 80vw;
        margin-top: 60px;
        object-fit: contain;
      }
      h1 {
        font-size: 30px;
      }
      .landing-page {
        display: flex;
        align-items: flex-start;
        flex-direction: column;
        align-items: center;
        text-align: center;
        align-content: center;
        gap: 40px;
        width: 100%;
      }

      .social-media-links {
        display: flex;
        justify-content: center;
        gap: 16px;
      }
    }
  </style>

  <div class="landing-page">
    <Image src={pig} alt="Me about to smash" class="image" />
    <div class="text">
      <h1>&nbsp;</h1>
      <p>Welcome to the swine domain. Enjoy my collection of crap</p>
      <div class="social-media-links">
        <SocialMediaLink
          image={github_white}
          alt="GitHub"
          link="https://github.com/piglettank"
        />
        <SocialMediaLink
          image={linkedin_white}
          alt="LinkedIn"
          link="https://www.linkedin.com/in/johan-fallberg/"
        />
      </div>
    </div>
  </div>

  <Games />
  <Card
    image={flubbermonkeys_logo}
    gif={flubbermonkeys_gif}
    title="Flubbermonkeys"
    description="Co-op adventure. Play as two monkey siblings made out of flubber. Available on Itch."
    link="https://flubbermonkeys.itch.io/game"
    imageAlt="Flubbermonkeys"
    gifAlt="Flubbermonkeys Game Preview"
    tags={["Unity"]}
  />
  <!-- <div class="divider" style="margin: 8px; "></div> -->

  <Card
    image={ff_logo}
    gif={ff_game_gif}
    title="Frilans Flame"
    description="Endless 2D runner with Frilans Finans theme. Play in browser."
    link="https://frilans-flame.netlify.app"
    imageAlt="Frilans Flame Logo"
    gifAlt="Frilans Flame Game Preview"
    tags={["Flutter", "Flame"]}
  />
  <div style="height: 160px;"></div>
</Layout>

